# ==========================================
# Database Configuration (MariaDB)
# ==========================================
DB_HOST=개발DB호스트주소          # 예: dev-db.company.com 또는 192.168.1.100                                                                                                                   
DB_PORT=3306                                                                                                                                                                                    
DB_USERNAME=ku_user                                                                                                                                                                             
DB_PASSWORD=실제비밀번호                                                                                                                                                                        
DB_DATABASE=ku_wave_plat                                                                                                                                                                        
                                                                                                                                                                                                
# DATABASE_URL은 사용하지 않으므로 주석 처리                                                                                                                                                    
# DATABASE_URL=mysql://ku_user:password@localhost:3306/ku_wave_plat  

# ==========================================
# JWT Configuration
# ==========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d

# ==========================================
# API Configuration
# ==========================================
API_PORT=8000
API_URL=http://localhost:8000
API_PREFIX=api/v1

# ==========================================
# Console Configuration
# ==========================================
CONSOLE_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# ==========================================
# CORS Configuration
# ==========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ==========================================
# Environment
# ==========================================
NODE_ENV=development

# ==========================================
# Rate Limiting
# ==========================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
